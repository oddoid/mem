{
  "name": "mem-font",
  "author": "oddoid",
  "version": "5.0.0",
  "description": "Proportional and monospace pixel font family.",
  "keywords": [
    "font",
    "TTF",
    "pixel",
    "monospace",
    "fixed-width",
    "proportional",
    "8-bit",
    "retro",
    "FontForge",
    "Aseprite",
    "game",
    "minimal",
    "code-page-437"
  ],
  "homepage": "https://github.com/oddoid/mem-font",
  "repository": "github:oddoid/mem-font",
  "bugs": "https://github.com/oddoid/mem-font/issues",
  "license": "GPL-3.0-only",
  "scripts": {
    "start": "live-server -q --wait=2000",
    "test": "tsc && npm -s run test:lint",
    "build": "bin/make",
    "format": "npm -s run linter -- --write",
    "version": "npm t && npm run build && git add dist",
    "linter": "prettier './**/*.{html,json,md,ts}'",
    "test:lint": "npm -s run linter -- -l",
    "preversion": "[ -z \"$(git status -z)\" ]",
    "postversion": "npm publish",
    "prepublishOnly": "git push origin \"$(git rev-parse --abbrev-ref @)\" \"$(git tag --points-at @)\""
  },
  "devDependencies": {
    "live-server": "1.2.1",
    "pre-commit": "1.2.2",
    "prettier": "2.0.5",
    "typescript": "3.9.3"
  }
}
